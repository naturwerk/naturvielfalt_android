        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textFaunaLatinName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="55" />

</LinearLayout>